{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"$id": "https://raw.githubusercontent.com/defterai/StarCitizenConfigDB/master/schema_translate.json",
	"description": "Validation schema for StarCitizen Config Database translation",
	"type": "object",
	"required": [ "commands", "settings" ],
	"additionalProperties": false,
	"properties": {
		"schema": {
			"type": "string",
			"format": "uri"
		},
		"commands": {
			"type": "object",
			"required": [ "categories", "items" ],
			"additionalProperties": false,
			"properties": {
				"categories": {
					"type": "array",
					"uniqueItems": true,
					"items": {
						"type": "object",
						"required": [ "key", "name" ],
						"additionalProperties": false,
						"properties": {
							"key": {
								"type": "string",
								"minLength": 1
							},
							"name": {
								"type": "string",
								"minLength": 1
							}
						}
					}
				},
				"items": {
					"type": "array",
					"uniqueItems": true,
					"items": {
						"type": "object",
						"required": [ "key", "name" ],
						"additionalProperties": false,
						"properties": {
							"key": {
								"type": "string",
								"minLength": 1
							},
							"name": {
								"type": "string",
								"minLength": 1
							},
							"desc": {
								"type": "string",
								"minLength": 1
							},
							"params": {
								"type": "array",
								"uniqueItems": true,
								"minItems": 1,
								"items": {
									"type": "object",
									"required": [ "name" ],
									"additionalProperties": false,
									"properties": {
										"name": {
											"type": "string",
											"minLength": 1
										},
										"values": {
											"type": "array",
											"uniqueItems": true,
											"minItems": 1,
											"items": {
												"type": "object",
												"required": [ "value" ],
												"additionalProperties": false,
												"properties": {
													"value": {
														"type": "string",
														"minLength": 1
													},
													"name": {
														"type": "string",
														"minLength": 1
													}
												}
											}
										},
										"desc": {
											"type": "string",
											"minLength": 1
										}
									}
								}
							}
						}
					}
				}
			}
		},
		"settings": {
			"type": "object",
			"required": [ "categories", "items" ],
			"additionalProperties": false,
			"properties": {
				"categories": {
					"type": "array",
					"uniqueItems": true,
					"items": {
						"type": "object",
						"required": [ "key", "name" ],
						"additionalProperties": false,
						"properties": {
							"key": {
								"type": "string",
								"minLength": 1
							},
							"name": {
								"type": "string",
								"minLength": 1
							}
						}
					}
				},
				"items": {
					"type": "array",
					"uniqueItems": true,
					"items": {
						"type": "object",
						"required": [ "key", "name" ],
						"additionalProperties": false,
						"properties": {
							"key": {
								"type": "string",
								"minLength": 1
							},
							"name": {
								"type": "string",
								"minLength": 1
							},
							"values": {
								"type": "array",
								"uniqueItems": true,
								"minItems": 1,
								"items": {
									"type": "object",
									"required": [ "value" ],
									"additionalProperties": false,
									"properties": {
										"value": {
											"type": "string",
											"minLength": 1
										},
										"name": {
											"type": "string",
											"minLength": 1
										}
									}
								}
							},
							"desc": {
								"type": "string",
								"minLength": 1
							}
						}
					}
				}
			}
		}
	}
}